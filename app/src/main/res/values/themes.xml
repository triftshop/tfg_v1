<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PescApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/river_blue</item>
        <item name="colorPrimaryVariant">@color/river_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/river_green</item>
        <item name="colorSecondaryVariant">@color/river_green_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/river_blue_dark</item>
    </style>

    <style name="SplashTheme" parent="Theme.PescApp">
        <item name="android:windowBackground">@color/river_blue_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>